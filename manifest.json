{
  "manifest_version": 3,
  "name": "치모티콘 정리 - 치지직 이모티콘 정리",
  "version": "1.6.0",
  "description": "치지직(CHZZK) 채팅창의 '최근 사용한 이모티콘' 목록에서 이모티콘들을 정리할 수 있습니다.",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["storage", "tabs", "management", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["https://game.naver.com/profile*"],
      "js": ["profile-power.js"]
    }
  ],
  "host_permissions": [
    "https://chzzk.naver.com/*",
    "https://api.chzzk.naver.com/*",
    "https://game.naver.com/*"
  ],
  "action": {
    "default_title": "치모티콘 정리",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://chzzk.naver.com/*"]
    }
  ]
}
